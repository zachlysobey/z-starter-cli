{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": ["es6", "es2015", "dom"],
        "declaration": true,
        "outDir": "lib",
        "rootDir": "src",
        "strict": true,
        "types": ["node", "mocha"],
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "noImplicitAny": false
    },
    "include": ["./src/**/*.ts"],
    "exclude": ["./src/**/*.test.ts", "./src/**/test-setup.ts"]
}
